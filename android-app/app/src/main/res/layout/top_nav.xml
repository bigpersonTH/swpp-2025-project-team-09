<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:viewBindingIgnore="true"
    tools:context=".ui.common.TopNav">

    <!-- 이 파일은 TopNav 커스텀 뷰의 디자인 미리보기를 위한 파일입니다. -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topUiContainer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/gray_light"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/ic_menus"
            android:contentDescription="메뉴 버튼"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <android.widget.Button
            android:id="@+id/finishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish Reading"
            android:background="@drawable/rounded_button"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            style="@style/BoldText48"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
